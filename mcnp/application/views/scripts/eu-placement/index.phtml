<div id="view-content">
    <table id="tbl-placement"></table>
    <div id="pg-placement"></div>
</div>

<script type="text/javascript">
    $("#tbl-placement").jqGrid({
        url:'/eu-placement/data',
        datatype: "json",
        mtype: 'GET',
        colNames:['ID','Date','Membre','Libellé','Compte','Produit','Montant','type d\'opérations'],
        height:500, width:827,
        colModel:[
            {name:'id_operation',index:'id_operation', width: 120, align:"left", editable: true,visible:false},
            {name:'date_op',index:'date_op', width: 120, align:"left", editable: true},
            {name:'code_membre',index:'code_membre', width: 170, align:"left", editable: true},
            {name:'lib_op',index:'lib_op', width: 250, align:"left", editable: true},
            {name:'code_cat',index:'code_cat', width: 170, editable: true,align:"left"},
