            <tr>
                <td><label for="nom_membre">Raison sociale * :</label></td>
                <td>
                    <input readonly="true" class="validate[required]" type="text" id="raison_membre" name="raison_membre" value="<?php echo $this->raison_membre; ?>" size="30"/>
                </td>
