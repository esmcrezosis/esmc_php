<script>
    $(document).ready(function() {
        $(function() {
            $('#view-content').puipanel();
            $('fieldset').puifieldset();
        });
        $('#valider').button();
        $('#annuler').button();
        $('#membre').blur(function(e)
        {
            e.preventDefault();
            if ($(this).val() !== '')
            {
                $.get(
                        '/eu-echange/recupnom',
                        {
                            num_membre: $(this).val()
                        },
                function success(data)
                {
                    $("#nom_membre").val(data[0]);
                    $("#prenom_membre").val(data[1]);
                    $("#raison_sociale").val(data[2]);
                });
            }
        });
    });
</script>