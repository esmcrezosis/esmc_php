                    }
                 });
                 }
                 e.preventDefault();
              });
              compteur = compteur + 1;
              document.getElementById("cpteur").setAttribute('value', compteur);
         }

         function deleteRow(tableID) {
                  try {
                      var table = document.getElementById(tableID);
                      var rowCount = table.rows.length - 1;
